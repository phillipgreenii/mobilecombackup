{
  "$schema":  "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
	  "go@1.24",
	  "golangci-lint@latest",
	  "claude-code@latest"
  ],
  "shell": {
    "init_hook": [
      "go mod tidy"
    ],
    "scripts": {
      "list-features": [
              "ls -1 features/{active,ready,backlog}"
      ],
      "formatter": [
              "go fmt ./..."
      ],
      "builder": [
              "go build -v ./..."
      ],
      "tests": [
              "go test -v -covermode=set ./..."
      ],
      "linter": [
              "golangci-lint run"
      ],
      "build-cli": [
              "sh -c 'VERSION=$(git describe --tags --always --dirty) && go build -ldflags \"-X main.Version=$VERSION\" -o mobilecombackup github.com/phillipgreen/mobilecombackup/cmd/mobilecombackup'"
      ]
    }
  }
}
